<div class="modal-header">
  <h2>{{header}}</h2>
  <span class="btn-close" onclick="hideModal(this);">Ã—</span>
</div>
<div class="modal-body">
	<fieldset id="form-screen-fieldset">
		<legend>New</legend>
		<label for="title">Title</label>
		<input type="text" width="32" id="form-screen-title" name="title" value="{{title}}" required />
		<label for="ingress">DisplayText</label>
		<textarea type="textarea" width="40" id="form-screen-ingress" name="ingress" rows="3">{{ingress}}</textarea>
		<label for="duration">Duration</label>
		<input type="number" width="10" id="form-screen-duration" name="duration" value="{{duration}}" min="1" max="300" required />
		<label for="score">Score</label>
		<input type="number" width="10" id="form-screen-score" name="score" value="{{score}}" min="1" max="6" required  />
		<label for="frequency">Frequency</label>
		<input type="number" width="10" id="form-screen-frequency" name="frequency" value="{{frequency}}" min="1" max="6" required  />
		<label for="statustext">Footer/status bar</label>
		<input type="text" width="32" id="form-screen-statustext" name="statustext" value="{{statustext}}" required />

		<label for="tags">Tags</label>
		<input type="text" width="32" id="form-screen-tags" name="tags" value="{{tags}}" />
		<label for="description">Description</label>
		<textarea type="textarea" width="32" id="form-screen-description" name="description" rows="2">{{description}}</textarea>

		<input type="hidden" id="form-screen-filename" name="filename" value="{{filename}}" />
		<input id="form-screen-submit" type="submit" name="submit" value="Save" />
	</fieldset>
</div>